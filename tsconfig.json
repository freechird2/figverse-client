{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "typeRoots": ["./types", "./node_modules/types"],
        "plugins": [
            {
                "name": "next"
            },
            {
                "name": "typescript-styled-plugin"
            }
        ],
        "paths": {
            "@styles/*": ["./src/styles/*"],
            "@components/*": ["./src/components/*"],
            "@app/*": ["./src/app/*"],
            "@function/*": ["./src/function/*"],
            "@shared/*": ["./src/shared/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@layout/*": ["./src/layout/*"],
            "@container/*": ["./src/container/*"],
            "@store/*": ["./src/store/*"],
            "@model/*": ["./src/model/*"],
            "@api/*": ["./src/api/*"],
            "@template/*": ["./src/template/*"],
            "@provider/*": ["./src/provider/*"]
            // "@/*": ["./src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.styled.ts", "**/*.tsx", ".next/types/**/*.ts", "custom.d.ts"],
    "exclude": ["node_modules"]
}
